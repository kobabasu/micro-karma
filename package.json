{
  "name": "test-karma-jasmine",
  "version": "0.0.1",
  "dependencies": {},
  "devDependencies": {
    "react-addons": "*"
  },

  "browser": {
  },

  "browserify": [ "js", "jsx" ],

  "eslintConfig": {
    "parser": "babel-eslint"
  },

  "scripts": {
    "babel": "babel ./src --out-dir ./spec",
    "browserify": "browserify -d --compact false ./spec/*.js > ./dist/build.js",
